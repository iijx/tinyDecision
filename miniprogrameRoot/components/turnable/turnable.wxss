    width: 600rpx;
    margin: 40rpx auto 0;
}
.canvas-wrap .canvas {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
  top: 0;
    left: -1000rpx;  
  }
  
  .turnable-wrap {
    position: relative;
    display: block;
    width: 600rpx;
    height: 600rpx;
    margin: 0 auto;
     /* opacity: 0;  */
  }
  .turnable-wrap .img,
  .turnable-wrap .pointer-img {
      width: 100%;
      height: 100%;
     
  }
  .turnable-wrap .pointer-img {
      position: absolute;
      top: 0;
      left: 0;
  }

  .lotteryBtn {
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

      
  }